<p id="notice"><%= notice %></p>
<div class="container">
  <h2>Records for sale</h2>
  <div class="row justify-content-center mx-auto py-3">
    <div class="col-md-6">
      <%= form_with url: products_path, local: true, skip_enforcing_utf8: true, method: :get do  |form| %>
      <div class="form-group">
        <div class="input-group">
          <%= form.text_field :query, class: 'form-control', autofocus: true, required: true %>
          <span class="input-group-btn">
            <%= form.submit 'Search', name: nil, class: 'btn btn-outline-dark' %>
          </span>
        </div>
      </div>
      <% end %>
    </div>
  </div>

  <span>Sort by Price</span>
  <span>Filter by Genre</span>
  <div class="container">
    <% @products.in_groups_of(4, false) do |group| %>
      <div class="row">
        <% group.each do |product| %>
          <div class="col-3">
            <%= link_to product do %>
              <h2><%= product.title %></h2>
              <p><%= product.artist %></p>
              <p><%= product.price %></p>
            <% end %>
            <% if current_user == product.user %>
              <%= link_to 'Edit', edit_product_path(product) %>
            <% end %>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
  <%= link_to 'Got a record to sell?', new_product_path %>
</div>
