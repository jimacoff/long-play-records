<nav class="navbar navbar-expand-lg navbar-light bg-light justify-content-md-between">
  <%= link_to 'Long Play Records', root_path, class: 'navbar-brand' %>

  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>

  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <div class="navbar-nav mr-auto">
      <%= link_to 'Home', root_path, class: 'nav-item nav-link' %>
      <%= link_to 'Records', products_path, class: 'nav-item nav-link' %>
    </div>

    <% if user_signed_in? %>
      <% if current_user.profile %>
        <%= link_to "Hi, #{current_user.profile.first_name}!", profile_path(current_user.profile), class: 'nav-item nav-link' %>
      <% else %>
        <span class="navbar-text">Hi, <%= current_user.email %>!</span>
      <% end %>

      <%= link_to 'Log out', destroy_user_session_path, method: :delete, class: 'nav-item nav-link' %>
    <% else %>
      <%= link_to 'Sign in', new_user_session_path, class: 'nav-item nav-link' %>
      <%= link_to 'Sign up', new_user_registration_path, class: 'nav-item nav-link' %>
    <% end %>
  </div>
</nav>
