<p id="notice"><%= notice %></p>
<div class="container">
  <h1>Messages</h1>

  <% if @conversation.buyer == current_user %>
  <h1><%= @conversation.seller.profile.username %></h1>
  <% else %>
  <h1><%= @conversation.buyer.profile.username %></h1>
  <% end %>
  <% if !@messages.nil? %>
    <% @messages.each do |message| %>
    <div>
      <p><%= format_time(message.created_at) %></p>
      <div>
        <p><%= message.sender.profile.username %></p>
        <p><%= message.content %></p>
      </div>
    </div>
    <% end %>
  <% end %>

  <%= render 'form', message: @message %>

</div>
